<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="showMode" format="string" />
        <attr name="leftImg" format="reference" />
        <attr name="leftTv" format="reference" />
        <attr name="midImg" format="reference" />
        <attr name="midTv" format="reference" />
        <attr name="rightImg" format="reference" />
        <attr name="rightTv" format="reference" />
        <attr name="rightTvColor" format="color" />
        <attr name="leftTvColor" format="color" />
        <attr name="midTvColor" format="color" />

        <attr name="rightTvSize" format="dimension" />
        <attr name="leftTvSize" format="dimension" />
        <attr name="midTvSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SubmitBtn">
        <attr name="Text" format="reference|string" />
        <attr name="TextColor" format="reference|color" />
        <attr name="BackgroundColor" format="reference|color" />
        <attr name="TextSize" format="reference|dimension" />
        <attr name="LoadingColor" format="reference|color" />
        <attr name="FailColor" format="reference|color" />
        <attr name="SuccessColor" format="reference|color" />
        <attr name="SuccessHint" format="reference|string" />
        <attr name="FailHint" format="reference|string" />
    </declare-styleable>


    <declare-styleable name="ProgressView">
        <attr name="bgColor" format="reference|color" />
        <attr name="fgColor" format="reference|color" />
        <attr name="type" format="enum">
            <enum name="Circle" value="1" />
            <enum name="Line" value="2" />
        </attr>
        <attr name="paintWidth" format="integer|dimension" />
    </declare-styleable>


</resources>